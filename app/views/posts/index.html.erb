<h1 class="text-center mt-4">Amazing Employees</h1>
<div class="container">
  <div class="d-flex flex-column align-items-center">
    <% @posts.each do |post| %>
      <div class="card mb-3 col-4">
        <div class="row g-0">
          <div class="col-md-4">
            <%= image_tag "willy.png", class: "img-fluid rounded-start", alt: "..."%>
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title"><%= post.name %></h5>
              <p class="card-text"><%= post.description %></p>
              <p class="card-text"><small class="text-body-secondary"><%= post.month_year.strftime("%B %Y")%></small></p>
              <div class="center">
              <%= link_to 'Show', post_path(post) %>
              <%= link_to 'Edit', edit_post_path(post) %>
              <%= link_to 'Delete', post_path(post), data: { turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
            </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<p class="text-center">
  <%= link_to 'New Post', new_post_path, class: 'btn btn-primary' %>
</p>
</div>
