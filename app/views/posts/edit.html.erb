<h1>Edit Post</h1>

<% if @post.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being updated:</h2>
    <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with model: @post, local: true do |form| %>
    <p>
        <%= form.label :month_year %><br>
        <%= form.date_field :month_year %>
    <p>
        <%= form.label :name %><br>
        <%= form.text_field :name %>
    </p>
    <p>
        <%= form.label :description %><br>
        <%= form.text_area :description %>
    <p>
    <p>
        <%= form.submit %>
    </p>
<% end %>
<%= link_to 'Back to Posts', posts_path %>